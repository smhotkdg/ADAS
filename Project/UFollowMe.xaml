<UserControl x:Class="Project.UFollowMe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="400" Width="200">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="83*"></RowDefinition>
            <RowDefinition Height="117*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        <MediaElement Grid.RowSpan="2" Name="mymedia" MouseLeftButtonDown="mymedia_MouseLeftButtonDown" LoadedBehavior="Manual" />
        <Image Grid.Row="2" Margin="0,0,0,65" Name="myimage" Stretch="Fill" MouseLeftButtonDown="myimage_MouseLeftButtonDown" Grid.RowSpan="2"/>
        
        <Label Name="label1" Grid.Row="1" Margin="-285,64,0,69"  FontSize="20" Foreground="Violet" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Grid.RowSpan="2" Width="200"></Label>
        <TextBox Grid.Row="3" Margin="0,41,0,0" Name="djtextbox"  AutoWordSelection="True"  BorderThickness="0" Background="Transparent" TextWrapping="Wrap"></TextBox>
    </Grid>
</UserControl>
