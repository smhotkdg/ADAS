       <Label  Opacity="0.7" Name="MyTemp18"  Visibility="Hidden" Grid.Row="1"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="40" Foreground="Green" FontWeight="Heavy" Margin="0,50" Grid.RowSpan="2">18℃</Label>
